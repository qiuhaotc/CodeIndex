<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">
  <!-- the targets to write to -->
  <targets>
    <target xsi:type="AsyncWrapper" name="AsyncFile" queueLimit="20000" overflowAction="Block">
      <target xsi:type="File"
              encoding="utf-8"
              name="File"
              openFileCacheTimeout="60"
              keepFileOpen="true"
              layout="${longdate} [${level}] : ${message}${exception:format=tostring}"
              archiveAboveSize="6000000"
              fileName="${basedir}/Logs/CodeIndex.log"
              archiveFileName="${basedir}/Logs/CodeIndex_{#}.log"
              archiveDateFormat="yyyyMMdd"
              archiveNumbering="DateAndSequence"
              maxArchiveFiles="10"
              concurrentWrites="true" />
    </target>
  </targets>
  <!-- rules to map from logger name to target -->
  <rules>
    <logger name="*" minlevel="${when:when='${environment:ASPNETCORE_ENVIRONMENT}'=='Development':inner=Debug:else=Warn}" writeTo="AsyncFile" />
  </rules>
</nlog>